<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProblem">

    <EditText
        android:id="@+id/edit_word2"
        android:layout_width="383dp"
        android:layout_height="67dp"
        android:layout_below="@+id/edit_word"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:autofillHints=""
        android:background="#f0f0f0"
        android:ems="10"
        android:hint="@string/Description"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="100"
        android:minLines="10"
        android:scrollbars="vertical"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/edit_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edit_word3"
        android:layout_width="383dp"
        android:layout_height="67dp"
        android:layout_below="@+id/edit_word2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:autofillHints=""
        android:background="#f0f0f0"
        android:ems="10"
        android:hint="Tipo: 1-Acidente |  2 - Obra"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLines="100"
        android:minLines="10"
        android:scrollbars="vertical"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@+id/edit_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cancel_button1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_View"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:text="@string/Cancel"
        app:layout_constraintTop_toBottomOf="@+id/edit_word"
        tools:layout_editor_absoluteX="59dp" />

    <Button
        android:id="@+id/button_save1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_View"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="19dp"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@+id/edit_word"
        tools:layout_editor_absoluteX="273dp" />

    <ImageView
        android:id="@+id/image_View"
        android:layout_width="173dp"
        android:layout_height="121dp"
        android:layout_below="@+id/edit_word3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        app:srcCompat="@drawable/ic_baseline_image_24"
        tools:ignore="VectorDrawableCompat"
        android:contentDescription="TODO" />

</RelativeLayout>